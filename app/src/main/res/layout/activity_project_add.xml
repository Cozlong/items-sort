<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".RoomAddActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#FEE594"
        android:padding="0dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/add_return"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="#FEE594"
            android:scaleType="centerInside"
            android:src="@drawable/door" />

        <ImageButton
            android:id="@+id/add_scan"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/add_return"
            android:background="#FEE594"
            android:scaleType="centerInside"
            android:src="@drawable/scan" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/add_pic"
            android:layout_width="315dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="#F6F6F6"
            android:scaleType="fitXY"
            android:src="@drawable/pic" />

        <TextView
            android:id="@+id/add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textColor="#888888" />

        <EditText
            android:id="@+id/add_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入名称"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="#888888"
            android:textSize="14dp"
            android:theme="@style/MyEditText" />

        <TextView
            android:id="@+id/add_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分类"
            android:textColor="#888888" />

        <Spinner
            android:id="@+id/spinner_sort"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:entries="@array/spinner" />

        <TextView
            android:id="@+id/add_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="放置位置"
            android:textColor="#888888" />

        <EditText
            android:id="@+id/add_input_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入物品放置位置"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="#888888"
            android:textSize="14dp"
            android:theme="@style/MyEditText" />


        <TextView
            android:id="@+id/add_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="期限"
            android:textColor="#888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_freshnessDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保质期"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/add_input_freshnessDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:theme="@style/MyEditText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_warn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="过期提醒"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/add_input_warn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:theme="@style/MyEditText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_productionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产日期"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/add_input_productionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:theme="@style/MyEditText" />
        </LinearLayout>


    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="" />

        <TextView
        android:id="@+id/add_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="库存"
        android:textColor="#888888" />

        <EditText
            android:id="@+id/add_input_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入库存"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="#888888"
            android:textSize="14dp"
            android:theme="@style/MyEditText" />
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_normal"
        android:textColor="@color/black"
        android:text="确认" />
    </LinearLayout>
</LinearLayout>